<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.canoeventures.common-lib</groupId>
    <artifactId>cucumber-parent</artifactId>
    <version>1.0.0_120</version>
    <packaging>pom</packaging>
    <name>Cucumber Parent</name>

    <properties>
        <tags>~@UnderConstruction</tags>
        <cucumber.options>--tags ${tags}</cucumber.options>
        <spring.profiles.active>local</spring.profiles.active>
        <skipTests>true</skipTests>

        <cucumber.config.dir>${project.basedir}/src/test/data</cucumber.config.dir>
        <cucumber.log.dir>${project.build.directory}/logs</cucumber.log.dir>
        <cucumber.config.file>need/to/set/cucumber.config.file/property</cucumber.config.file>
        <cucumber.log.config.file>need/to/set/cucumber.log.config.file/property</cucumber.log.config.file>
        <cucumber.apphome.name>need/to/set/cucumber.apphome.name/property</cucumber.apphome.name>
        <cucumber.apphome.dir>${user.home}/cucumber/instances/${cucumber.apphome.name}</cucumber.apphome.dir>
    </properties>

    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.11</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>info.cukes</groupId>
            <artifactId>cucumber-junit</artifactId>
            <version>1.1.6</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.canoeventures.common-lib</groupId>
            <artifactId>common-cucumber</artifactId>
            <version>1.0.0-SNAPSHOT</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>com.canoeventures.common-lib</groupId>
            <artifactId>common-test</artifactId>
            <version>1.0.0-SNAPSHOT</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-core</artifactId>
            <version>3.2.2.RELEASE</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-context</artifactId>
            <version>3.2.2.RELEASE</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>JenkinsCompile</id>
            <properties>
                <cucumber.options>--tags @JenkinsCompile</cucumber.options>
                <spring.profiles.active>devint</spring.profiles.active>
                <skipTests>false</skipTests>
            </properties>
        </profile>
        <profile>
            <id>JenkinsNightlyBuild</id>
            <properties>
                <cucumber.options>--tags @JenkinsNightlyBuild</cucumber.options>
                <spring.profiles.active>devint</spring.profiles.active>
                <skipTests>false</skipTests>
            </properties>
        </profile>
        <profile>
            <id>scrum1</id>
            <properties>
                <spring.profiles.active>scrum1</spring.profiles.active>
                <skipTests>false</skipTests>
            </properties>
        </profile>
        <profile>
            <id>scrum2</id>
            <properties>
                <spring.profiles.active>scrum2</spring.profiles.active>
                <skipTests>false</skipTests>
            </properties>
        </profile>
        <profile>
            <id>scrum3</id>
            <properties>
                <spring.profiles.active>scrum3</spring.profiles.active>
                <skipTests>false</skipTests>
            </properties>
            <build />
        </profile>
        <profile>
            <id>scrum4</id>
            <properties>
                <spring.profiles.active>scrum4</spring.profiles.active>
                <skipTests>false</skipTests>
            </properties>
            <build />
        </profile>
        <profile>
            <id>scrum8</id>
            <properties>
                <spring.profiles.active>scrum8</spring.profiles.active>
                <skipTests>false</skipTests>
            </properties>
            <build />
        </profile>
        <profile>
            <id>devint</id>
            <properties>
                <spring.profiles.active>devint</spring.profiles.active>
                <skipTests>false</skipTests>
            </properties>
        </profile>
        <profile>
            <id>personal</id>
            <properties>
                <spring.profiles.active>local</spring.profiles.active>
                <skipTests>false</skipTests>
            </properties>
        </profile>

        <profile>
            <id>local</id>
            <properties>
                <spring.profiles.active>local</spring.profiles.active>
                <skipTests>false</skipTests>
            </properties>
        </profile>
    </profiles>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.1</version>
                <configuration>
                    <compilerId>groovy-eclipse-compiler</compilerId>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>org.codehaus.groovy</groupId>
                        <artifactId>groovy-eclipse-compiler</artifactId>
                        <version>2.9.0-01-SNAPSHOT</version>
                    </dependency>
                    <dependency>
                        <groupId>org.codehaus.groovy</groupId>
                        <artifactId>groovy-eclipse-batch</artifactId>
                        <version>2.3.4-01</version>
                    </dependency>
                </dependencies>
            </plugin>
            <plugin>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>2.12</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>integration-test</goal>
                            <goal>verify</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <testNGArtifactName>none:none</testNGArtifactName>
                    <systemPropertyVariables>
                        <cucumber.options>${cucumber.options}</cucumber.options>
                        <spring.profiles.active>${spring.profiles.active}</spring.profiles.active>
                    </systemPropertyVariables>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
