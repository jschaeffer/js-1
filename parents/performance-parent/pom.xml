<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.canoeventures.common-lib</groupId>
    <artifactId>performance-parent</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <name>Performance Parent</name>

    <properties>
        <simulation>need/to/set/simulation/property</simulation>
        <dataFolder>src/test/data</dataFolder>
        <configDir>src/test/resources</configDir>
        <resultsFolder>target/gatling/results</resultsFolder>
        <requestBodiesFolder>src/test/resources/request-bodies</requestBodiesFolder>
        <simulationsFolder>src/test/java</simulationsFolder>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.canoeventures.common-lib</groupId>
            <artifactId>common-gatling</artifactId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>io.gatling</groupId>
                <artifactId>gatling-maven-plugin</artifactId>
                <version>2.0.0</version>

                <configuration>
                    <dataFolder>${dataFolder}</dataFolder>
                    <configDir>${configDir}</configDir>
                    <resultsFolder>${resultsFolder}</resultsFolder>
                    <requestBodiesFolder>${requestBodiesFolder}</requestBodiesFolder>
                    <simulationsFolder>${simulationsFolder}</simulationsFolder>
                    <simulationClass>${simulation}</simulationClass>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
