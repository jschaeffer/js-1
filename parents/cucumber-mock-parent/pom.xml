<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <name>Cucumber Mock Parent</name>
    <artifactId>cucumber-mock-parent</artifactId>
    <version>1.0.0_111</version>
    <packaging>pom</packaging>

    <parent>
        <groupId>com.canoeventures.common-lib</groupId>
        <artifactId>cucumber-parent</artifactId>
        <version>1.0.0_111</version>
        <relativePath>../cucumber-parent/pom.xml</relativePath>
    </parent>

    <dependencies>
        <dependency>
            <groupId>com.canoeventures</groupId>
            <artifactId>int-test-support</artifactId>
            <version>1.0.0-SNAPSHOT</version>
            <type>war</type>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <properties>
        <cucumber.mock.context>int-test-support</cucumber.mock.context>
        <cucumber.mock.port>9190</cucumber.mock.port>
        <cucumber.mock.rmi.port>9191</cucumber.mock.rmi.port>
    </properties>

    <profiles>
        <profile>
            <id>local</id>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.7</version>
                        <executions>
                            <execution>
                                <id>create-app-home</id>
                                <phase>pre-integration-test</phase>
                                <configuration>
                                    <target>
                                        <delete dir="${cucumber.apphome.dir}/conf" />
                                        <mkdir dir="${cucumber.apphome.dir}/conf" />
                                        <copy todir="${cucumber.apphome.dir}/conf" verbose="true" failonerror="false">
                                            <fileset dir="${cucumber.config.dir}" includes="${cucumber.config.file},${cucumber.log.config.file}" />
                                        </copy>
                                        <copy todir="${cucumber.apphome.dir}/conf" verbose="true" failonerror="false">
                                            <fileset dir="${cucumber.config.dir}" includes="*.functional.*" />
                                            <mapper type="regexp" from="^(.*)\.functional\.(.*)$$" to="\1.\2" />
                                        </copy>
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <groupId>org.codehaus.cargo</groupId>
                        <artifactId>cargo-maven2-plugin</artifactId>
                        <version>1.4.5</version>

                        <configuration>
                            <container>
                                <containerId>jetty8x</containerId>
                                <type>embedded</type>

                                <systemProperties>
                                    <application.root>${user.home}/cucumber/instances</application.root>
                                </systemProperties>
                            </container>
                        </configuration>

                        <executions>
                            <execution>
                                <id>start-mock-container</id>
                                <phase>pre-integration-test</phase>
                                <configuration>
                                    <deployables>
                                        <deployable>
                                            <groupId>com.canoeventures</groupId>
                                            <artifactId>int-test-support</artifactId>
                                            <type>war</type>
                                            <properties>
                                                <context>${cucumber.mock.context}</context>
                                            </properties>
                                        </deployable>
                                    </deployables>
                                    <configuration>
                                        <home>${project.build.directory}/container/mock</home>
                                        <properties>
                                            <cargo.servlet.port>${cucumber.mock.port}</cargo.servlet.port>
                                            <cargo.rmi.port>${cucumber.mock.rmi.port}</cargo.rmi.port>
                                        </properties>
                                    </configuration>
                                </configuration>
                                <goals>
                                    <goal>start</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>stop-mock-container</id>
                                <phase>post-integration-test</phase>
                                <configuration>
                                    <container>
                                        <containerId>jetty8x</containerId>
                                    </container>
                                    <configuration>
                                        <properties>
                                            <cargo.rmi.port>${cucumber.mock.rmi.port}</cargo.rmi.port>
                                        </properties>
                                    </configuration>
                                </configuration>
                                <goals>
                                    <goal>stop</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>personal</id>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <version>1.7</version>
                        <executions>
                            <execution>
                                <id>create-app-home</id>
                                <phase>pre-integration-test</phase>
                                <configuration>
                                    <target>
                                        <delete dir="${cucumber.apphome.dir}/conf" />
                                        <mkdir dir="${cucumber.apphome.dir}/conf" />
                                        <copy todir="${cucumber.apphome.dir}/conf" verbose="true" failonerror="false">
                                            <fileset dir="${cucumber.config.dir}" includes="${cucumber.config.file},${cucumber.log.config.file}" />
                                        </copy>
                                        <copy todir="${cucumber.apphome.dir}/conf" verbose="true" failonerror="false">
                                            <fileset dir="${cucumber.config.dir}" includes="*.functional.*" />
                                            <mapper type="regexp" from="^(.*)\.functional\.(.*)$$" to="\1.\2" />
                                        </copy>
                                    </target>
                                </configuration>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>


    <build>
        <plugins>
            <plugin>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>2.12</version>
                <configuration>
                    <systemPropertyVariables>
                        <config.dir>${cucumber.apphome.dir}/conf</config.dir>
                        <config.file>${cucumber.apphome.dir}/conf/${cucumber.config.file}</config.file>
                        <log4j.configuration>${cucumber.apphome.dir}/conf/${cucumber.log.config.file}</log4j.configuration>
                        <log.dir>${cucumber.apphome.dir}/logs</log.dir>
                    </systemPropertyVariables>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
