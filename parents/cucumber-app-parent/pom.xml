<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.canoeventures.common-lib</groupId>
    <artifactId>cucumber-app-parent</artifactId>
    <version>1.0.0_111</version>
    <packaging>pom</packaging>
    <name>Cucumber App Parent</name>

    <parent>
        <groupId>com.canoeventures.common-lib</groupId>
        <artifactId>cucumber-parent</artifactId>
        <version>1.0.0_111</version>
        <relativePath>../cucumber-parent/pom.xml</relativePath>
    </parent>


    <properties>
        <cucumber.war.artifactId>need/to/set/cucumber.war.artifactId/property</cucumber.war.artifactId>
        <cucumber.war.context>need/to/set/cucumber.war.context/property</cucumber.war.context>
        <cucumber.war.port>need/to/set/cucumber.war.port/property</cucumber.war.port>
        <cucumber.apphome.name>${cucumber.war.artifactId}</cucumber.apphome.name>
    </properties>

    <profiles>
        <profile>
            <id>local</id>

            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.cargo</groupId>
                        <artifactId>cargo-maven2-plugin</artifactId>
                        <version>1.4.5</version>

                        <configuration>
                            <container>
                                <containerId>jetty8x</containerId>
                                <type>embedded</type>

                                <systemProperties>
                                    <application.root>${user.home}/cucumber/instances</application.root>
                                    <APPHOME_DIR>${cucumber.apphome.dir}</APPHOME_DIR>
                                    <config.dir>${cucumber.apphome.dir}/conf</config.dir>
                                    <config.file>${cucumber.apphome.dir}/conf/${cucumber.config.file}</config.file>
                                    <log4j.configuration>${cucumber.apphome.dir}/conf/${cucumber.log.config.file}</log4j.configuration>
                                    <log4j.configurationFile>${cucumber.apphome.dir}/conf/${cucumber.log.config.file}</log4j.configurationFile>
                                    <log4j.location>${cucumber.apphome.dir}/conf/${cucumber.log.config.file}</log4j.location>
                                    <log.dir>${cucumber.apphome.dir}/logs</log.dir>
                                    <spring.profiles.active>functional</spring.profiles.active>
                                    <org.apache.cxf.Logger>org.apache.cxf.common.logging.Slf4jLogger</org.apache.cxf.Logger>
                                </systemProperties>
                            </container>
                        </configuration>

                        <executions>
                            <execution>
                                <id>start-app-container</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>start</goal>
                                </goals>
                                <configuration>
                                    <deployables>
                                        <deployable>
                                            <groupId>${project.groupId}</groupId>
                                            <artifactId>${cucumber.war.artifactId}</artifactId>
                                            <type>war</type>
                                            <properties>
                                                <context>${cucumber.war.context}</context>
                                            </properties>
                                        </deployable>

                                    </deployables>
                                    <configuration>
                                        <home>${project.build.directory}/container/app</home>
                                        <properties>
                                            <cargo.servlet.port>${cucumber.war.port}</cargo.servlet.port>
                                        </properties>
                                    </configuration>
                                </configuration>
                            </execution>
                            <execution>
                                <id>stop-app-container</id>
                                <phase>post-integration-test</phase>
                                <configuration>
                                    <container>
                                        <containerId>jetty8x</containerId>
                                    </container>
                                    <configuration>
                                        <home>${project.build.directory}/container/app</home>
                                    </configuration>
                                </configuration>
                                <goals>
                                    <goal>stop</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
